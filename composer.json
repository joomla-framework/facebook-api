{
    "name": "joomla/facebook",
    "type": "joomla-package",
    "description": "Joomla Facebook Package",
    "keywords": ["joomla", "framework", "facebook"],
    "homepage": "https://github.com/joomla-framework/facebook-api",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "joomla/oauth2": "~1.0",
        "joomla/input": "~1.0",
        "joomla/http": "~1.0",
        "joomla/uri": "~1.0"
    },
    "require-dev": {
        "joomla/test": "~1.0"
    },
    "suggest": {
        "joomla/registry": "Registry can be used as an alternative to using an array for the package options."
    },
    "autoload": {
    	"psr-4": {
    		"Joomla\\Facebook\\": "src/"
    	}
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Facebook\\Tests\\": "Tests/"
        }
    }
}

